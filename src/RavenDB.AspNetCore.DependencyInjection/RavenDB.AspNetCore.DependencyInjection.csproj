<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<Description>Dependency Injection package for using RavenDB with ASP.NET Core.</Description>
    <Copyright>Copyright 2017</Copyright>
    <AssemblyTitle>RavenDB AspNetCore DependencyInjection</AssemblyTitle>
    <VersionPrefix>1.0.5-beta</VersionPrefix>
    <Authors>FriendlyAgent</Authors>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>RavenDB.AspNetCore.DependencyInjection</AssemblyName>
    <PackageId>RavenDB.AspNetCore.DependencyInjection</PackageId>
    <PackageTags>nosql;ravendb;raven;document;database;client;dependency;injection;ASP.NET;core</PackageTags>
    <PackageIconUrl>http://static.ravendb.net/logo-for-nuget.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/FriendlyAgent/RavenDB.AspNetCore.DependencyInjection</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/FriendlyAgent/RavenDB.AspNetCore.DependencyInjection/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/FriendlyAgent/RavenDB.AspNetCore.DependencyInjection</RepositoryUrl>
    <NetStandardImplicitPackageVersion>1.6.1</NetStandardImplicitPackageVersion>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <Version>1.0.6-beta</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Options" Version="1.1.1" />
    <PackageReference Include="Raven.Client" Version="4.0.0-alpha-40012" />
  </ItemGroup>

</Project>